        "/{account}/{database}/{view}.view": {
            "get": {
                "summary": "Get rows from view",
                "operationId": "getRowsView",
                "description": "Get rows from a user-defined view. Supports data selection, projection, sorting and paging. \n\nCurrently any existing user-defined view at the database level can be called using this method. The system does not know anything about user-defined views in advance, the client needs to know the view definition (field names and types) in advance to specify the query parameters.\n\nThe view method does not support (auto-)joining fields from other tables.\n\nFor details on query parameters please refer to the table method Get Rows.\n",
                "tags": [
                    "database"
                ],
                "parameters": [
                    {
                        "name": "account",
                        "in": "path",
                        "description": "database account",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "database",
                        "in": "path",
                        "description": "database",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "view",
                        "in": "path",
                        "description": "database view",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "$filter",
                        "in": "query",
                        "description": "array of row filters.",
                        "required": false,
                        "type": "array",
                        "collectionFormat": "tsv",
                        "items": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "$select",
                        "in": "query",
                        "description": "array of table fields.",
                        "required": false,
                        "type": "array",
                        "collectionFormat": "csv",
                        "items": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "$orderby",
                        "in": "query",
                        "description": "array of order clauses.",
                        "required": false,
                        "type": "array",
                        "collectionFormat": "csv",
                        "items": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "$skip",
                        "in": "query",
                        "description": "skip this number of rows. On views it works only if fields are provided explicitly through $select.",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "$top",
                        "in": "query",
                        "description": "max number of rows to be returned.",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "description": "define row output format. currently supported are json, csv.",
                        "required": false,
                        "default": "json",
                        "type": "string"
                    },
                    {
                        "name": "debug",
                        "in": "query",
                        "description": "obtain debug information around underlying SQL execution.",
                        "required": false,
                        "default": 0,
                        "type": "integer"
                    }
                ],
